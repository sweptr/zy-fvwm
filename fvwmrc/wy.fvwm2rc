+			"&VIM"  Exec exec gvim
+			"emacs%mini.gnu.xpm"  Exec exec emacs
+			"&gv%mini.gv.xpm"  Exec exec gv
+			"&acrobat%mini.pdf.xpm"  Exec exec acroread
